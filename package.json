{
  "name": "cropperjs",
  "version": "2.0.0-rc.2",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "vitepress build docs",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "dev": "vitepress dev docs --host",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint docs/.vitepress/**/*.{css,scss,vue} --fix",
    "lint:js": "eslint . docs/.vitepress --fix",
    "prepare": "husky install",
    "publish": "lerna publish from-package",
    "release": "lerna run release && npm run lint && npm test && npm run build && npm run changelog",
    "start": "npm run dev",
    "test": "jest"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@microsoft/api-extractor": "^7.47.6",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/estree": "^1.0.5",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "autoprefixer": "^10.4.20",
    "change-case": "^4.1.2",
    "conventional-changelog-cli": "^3.0.0",
    "create-banner": "^2.0.0",
    "cssnano": "^6.1.2",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^46.10.1",
    "eslint-plugin-vue": "^9.27.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^7.4.2",
    "lint-staged": "^14.0.1",
    "markdown-it-container": "^3.0.0",
    "postcss": "^8.4.41",
    "postcss-cli": "^10.1.0",
    "postcss-html": "^1.7.0",
    "rgb-hex": "^4.1.0",
    "rollup": "^2.79.1",
    "rollup-plugin-inline-postcss": "^3.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.77.8",
    "stylelint": "^14.16.1",
    "stylelint-config-recommended-scss": "^8.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-order": "^5.0.0",
    "ts-jest": "^29.2.4",
    "tslib": "^2.6.3",
    "typescript": "^4.9.5",
    "vitepress": "^1.3.3"
  }
}
